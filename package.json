{
  "author": "Paul Serby <paul@serby.net>",
  "name": "pliers",
  "description": "A buildy, watchy type tool",
  "version": "1.2.0",
  "tags": [
    "build tool",
    "make",
    "watch"
  ],
  "publishConfig": {
    "registry": "http://registry.npmjs.org"
  },
  "bin": {
    "pliers": "./pliers-cli.js"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:serby/pliers"
  },
  "main": "lib/pliers.js",
  "scripts": {
    "lint": "jshint . --reporter=./node_modules/jshint-full-path/index.js",
    "checkStyle": "jscs .",
    "pretest": "npm run lint && npm run checkStyle",
    "test": "istanbul cover ./node_modules/.bin/_mocha -- -R spec -r should",
    "posttest": "istanbul check-coverage && rm -rf coverage",
    "prepublish": "npm test && npm prune"
  },
  "engines": {
    "node": ">=0.8"
  },
  "dependencies": {
    "async": "^0.9.0",
    "chalk": "^1.0.0",
    "chokidar": "^1.0.0-rc4",
    "commander": "^2.7.1",
    "glob": "^5.0.3",
    "lodash.assign": "^3.0.0",
    "lodash.uniq": "^3.0.1",
    "lodash.without": "^3.0.0",
    "mkdirp": "^0.5.0",
    "rimraf": "^2.3.2"
  },
  "devDependencies": {
    "istanbul": "^0.3.10",
    "jscs": "^1.11.3",
    "jshint": "^2.6.3",
    "jshint-full-path": "^1.1.1",
    "mocha": "^2.2.1",
    "should": "^5.2.0"
  }
}
